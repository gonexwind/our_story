<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextView.Header">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.Title">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Subtitle">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Subtitle.Bold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextView.Subtitle.Color">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="EditText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_color_2</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>
</resources>